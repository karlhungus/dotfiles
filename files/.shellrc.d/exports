export EDITOR=vim

export PATH="./bin:./vendor/bin:${HOME}/bin:/usr/local/bin:/usr/bin:/usr/sbin:/bin:${PATH}"

### Go
export GOPATH="${HOME}"
export PATH="${GOPATH}/bin:${PATH}"

### YARN
export PATH="${PATH}:${HOME}/.yarn/bin"

### FZF
export FZF_DEFAULT_COMMAND='ag --hidden -g ""'

### OpenSSL Headers should use Brew
if [ "$(uname)" == "Darwin" ]; then
  export OPENSSL_INCLUDE_DIR=`brew --prefix openssl`/include
  export OPENSSL_LIB_DIR=`brew --prefix openssl`/lib
  export DEP_OPENSSL_INCLUDE=`brew --prefix openssl`/include
fi

[ -f "/usr/libexec/java_home" ] && export JAVA_HOME=`/usr/libexec/java_home -v 1.8`
export WORKON_HOME=~/.virtualenvs

### Salesforce
local bread_vars=$GOPATH/src/git.dev.pardot.com/Pardot/infrastructure/bread/etc/shrc
if [ -f $bread_vars ]; then
  source $bread_vars
else
  echo "Could not find Salesforce vars at: $bread_vars"
fi
